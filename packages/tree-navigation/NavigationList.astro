---
import NavigationItem from "./NavigationItem.astro";

const {
  navigationItems = [],
  currentLevel,
  startLevel,
  maxLevel,
  parentPathnames,
} = Astro.props;
// console.log({ maxLevel });
---

<ul class={`navigation-level-${currentLevel}`}>
  {
    navigationItems?.map(
      (item) =>
        currentLevel <= maxLevel && (
          <NavigationItem
            {...item}
            startLevel={startLevel}
            currentLevel={currentLevel}
            maxLevel={maxLevel}
            parentPathnames={parentPathnames}
          />
        )
    )
  }
</ul>

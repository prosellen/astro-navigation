---
import NavigationItem from "./NavigationItem.astro";

const {
  navigationItems = [],
  currentLevel,
  startLevel,
  maxLevel,
  dependencies,
} = Astro.props;
// console.log({ maxLevel });
---

<ul
  class={`level_${currentLevel}`}
  data-navigation-level={currentLevel}
  role="menubar"
>
  {
    navigationItems?.map(
      (item) =>
        currentLevel <= maxLevel && (
          <NavigationItem
            {...item}
            startLevel={startLevel}
            currentLevel={currentLevel}
            maxLevel={maxLevel}
            dependencies={dependencies}
          />
        )
    )
  }
</ul>

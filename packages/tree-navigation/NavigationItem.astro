---
import NavigationList from "./NavigationList.astro";

const {
  text,
  url,
  title,
  children,
  level,
  maxLevel,
  navId,
  redirect,
  parentPathnames,
  startLevel,
} = Astro.props;

const current = url === Astro.url.pathname;
const trail =
  parentPathnames?.includes(redirect) || parentPathnames?.includes(url);
---

<li class={(current && `active`) || (trail && `trail`)}>
  <a
    href={redirect || url}
    title={title}
    class={(current && `active`) || (trail && `trail`)}>{text}</a
  >
  {
    children?.length > 0 && (
      <NavigationList
        startLevel={startLevel}
        currentLevel={level + 1}
        maxLevel={maxLevel}
        navigationItems={children}
      />
    )
  }
</li>
